<%= form_for @product do |f| %>
	<div class="">
		<%= f.label "name" %>
		<%= f.text_field "name" %>
	</div class="">

	<div class="">
		<%= f.label "description" %>
		<%= f.text_area "description" %>
	</div class="">

	<div class="">
		<%= f.label "price_in_cents" %>
		<%= f.number_field "price_in_cents" %>
	</div class="">

	<div class="">
		<%= submit_tag "Save" %>
	</div class="">

<% end %>